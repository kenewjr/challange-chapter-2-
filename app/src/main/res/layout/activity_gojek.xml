<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EFEFEF"
    android:layout_height="match_parent"
    tools:context=".Gojek">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="vertical"
        android:visibility="visible">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginVertical="8sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@id/person"
                    app:cardCornerRadius="10sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50sp"
                        android:layout_marginTop="10sp"
                        android:text="@string/mau_cari_apa"
                        android:textSize="20sp" />
                    <SearchView
                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/person"
                        android:background="@android:color/transparent" />
                </androidx.cardview.widget.CardView>
                <ImageButton
                    android:id="@+id/person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/roundcorner"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/profile"
                    android:padding="1dp"
                    android:src="@drawable/ic_person" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/blue"
            app:cardCornerRadius="20sp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/isidompet"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20sp"
                    app:cardCornerRadius="10sp">
                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="5sp"
                        android:backgroundTint="@color/white"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="@string/gopay"
                                android:textColor="@color/black"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                app:drawableLeftCompat="@drawable/ic_baseline_account_balance_wallet_24" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rp109_048"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/klik_dan_cek_riwayat"
                            android:textColor="@color/teal_700"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/bayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:layout_toEndOf="@id/isidompet">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/blue"
                                android:text="@string/baayar"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:drawableTopCompat="@drawable/ic_baseline_arrow_circle_up_24" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/isisaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="50sp"
                    android:layout_toEndOf="@id/bayar">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/blue"
                                android:text="@string/isi_saldo"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:drawableTopCompat="@drawable/ic_baseline_add_circle_24" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="50sp"
                    android:layout_toEndOf="@id/isisaldo">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/blue"
                                android:text="@string/eksplor"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:drawableTopCompat="@drawable/ic_baseline_explore_24" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:columnCount="4"
            android:rowCount="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="@string/goride"
                app:drawableTopCompat="@drawable/goride" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="@string/gocar"
                app:drawableTopCompat="@drawable/gocar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="@string/gofood"
                app:drawableTopCompat="@drawable/gofood" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="@string/gosend"
                app:drawableTopCompat="@drawable/gosend" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="@string/gomart"
                app:drawableTopCompat="@drawable/gomart" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="@string/gopulsa"
                app:drawableTopCompat="@drawable/gopulsa" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="@string/check_in"
                app:drawableTopCompat="@drawable/checkin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="@string/lainnya"
                app:drawableTopCompat="@drawable/lainnya" />
        </GridLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/orange"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/level"
                    android:layout_width="40sp"
                    android:layout_height="60sp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20sp"
                    android:contentDescription="@string/level"
                    android:src="@drawable/ic_baseline_star_24" />
                <RelativeLayout
                    android:id="@+id/progres"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_toStartOf="@id/kanan1"
                    android:layout_toEndOf="@id/level"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/atas_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginBottom="10sp"
                        android:text="@string/_300_xp_lagi_ada_harta_karun"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32sp"
                        android:progress="23" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/atas_level"
                        android:layout_margin="10sp"
                        android:text="@string/_300_xp_lagi_ada_harta_karun"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:drawableLeftCompat="@drawable/ic_baseline_timer_24" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/kanan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="35sp"
                    android:contentDescription="@string/panahkanan"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/akses_cepat"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp">
                    <ImageView
                        android:id="@+id/voucher"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="0dp"
                        android:contentDescription="@string/voucher"
                        android:src="@drawable/ic_baseline_card_giftcard_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:layout_toStartOf="@id/kanan2"
                        android:layout_toEndOf="@id/voucher"
                        android:text="@string/ada_voucher_nganggur_nih"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/kanan2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="40sp"
                        android:contentDescription="@string/panahkanan"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp">
                    <ImageView
                        android:id="@+id/restoran"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/voucher"
                        android:src="@drawable/ic_baseline_restaurant_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:layout_toStartOf="@id/kanan3"
                        android:layout_toEndOf="@id/restoran"
                        android:text="@string/restoran_terdekat"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/kanan3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="40sp"
                        android:contentDescription="@string/panahkanan"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="@string/lebih_hemat_hari_ini"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="@string/dapatkan_harga_special_dan_diskon_di_tokopedia"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200sp">

                    <ImageView
                        android:id="@+id/iklan1"
                        android:layout_width="300sp"
                        android:layout_height="200sp"
                        android:contentDescription="@string/iklansatu"
                        android:src="@drawable/iklan" />
                    <ImageView
                        android:id="@+id/iklan2"
                        android:layout_width="300sp"
                        android:layout_height="200sp"
                        android:layout_toEndOf="@id/iklan1"
                        android:contentDescription="@string/iklandua"
                        android:src="@drawable/tokped" />
                </RelativeLayout>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hadiah_yang_menarik_untuk_mu"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp">

                <ImageView
                    android:id="@+id/iklan3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/iklantiga"
                    android:src="@drawable/iklan3" />
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iklan3"
                    android:text="@string/total_bonus_rp_100_000"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/navigasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/text3"
                    android:text="@string/buka_gopay_jago_akun_untuk_mendapatkan_cashback_gopay_koin_dan_voucher_sebesar_100k_idr"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>